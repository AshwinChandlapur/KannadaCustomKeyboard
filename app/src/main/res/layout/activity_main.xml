<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="my.typekannada.ashwin.customkeyboard.MainActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/part1"
    android:gravity="center">

    <TextView
        android:text="@string/kanText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:text="@string/render"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#1e1e1e"
        android:id="@+id/textView6"
        android:gravity="center"
        android:layout_below="@+id/textView5"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Kannada Keyboard"
        android:id="@+id/KanKey"
        android:onClick="langset"
        android:clickable="true"
        android:textColor="#ffffff"
        android:layout_below="@+id/textView6"
        android:layout_centerHorizontal="true"
        android:textAlignment="gravity"
        android:layout_margin="5dp" />

</LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/part1"
        android:layout_above="@+id/adView"
        android:layout_marginBottom="18dp"
        android:id="@+id/scrollView">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="ಕನ್ನಡ ->ಕ  ನ+⁠⁠⁠್+ನ  ಡ"
        android:id="@+id/textView"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/KanKey"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="To get ್, double tap ಅ"
        android:id="@+id/textView2"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="⁠⁠⁠ಕಸ್ತೂರಿ->ಕ  ಸ+್+ತ+⁠⁠⁠ಊ  ರ+ಿ"
        android:id="@+id/textView3"
        android:layout_below="@+id/textView2"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingTop="14dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="To get ಿ, double tap ⁠⁠⁠ಇ"
        android:id="@+id/textView4"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="ಟೈಪ್-> ಟ+ೈ  ಪ+್"
        android:id="@+id/textView8"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="To get ೈ double tap ಐ, To get ್, double tap ಅ"
        android:id="@+id/textView7"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView8"
        android:layout_alignParentLeft="true" />


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_margin="2dp"
                android:elevation="5dp"
                android:id="@+id/promos"
                ads:cardCornerRadius="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/logo_with_background"
                            android:layout_margin="5dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="ಕನ್ನಡ ಮತ್ತು ಇಂಗ್ಲಿಷ್ ನ್ಯೂಸ್.\nStay Ahead of all. Read news from News Duniya."
                            android:layout_margin="5dp"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/colorAccent"
                        android:text="Download Now"
                        android:textSize="16sp"
                        android:layout_margin="2dp"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="ಕರ್ನಾಟಕ-> ಕ  ರ+್+ನ+ಾ   ಟ  ಕ "
        android:id="@+id/textView9"
        android:layout_below="@+id/textView7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="2dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="To get ್  double tap ಅ, To get ಾ  double tap ಆ"
        android:id="@+id/textView10"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView9"
        android:layout_alignParentLeft="true"
         />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="ವ್ಯಕ್ತಿ-> ವ+್+ಯ  ಕ+್+ತ+ ಿ "
                android:id="@+id/textView12"
                android:layout_below="@+id/textView10"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="22dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="To get ್  double tap ಅ, To get  ಿ double tap ಇ"
                android:id="@+id/textView13"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView12"
                android:layout_alignParentLeft="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="ದಿಗ್ಭ್ರಮೆ-> ದ+ ಿ   ಗ+್+ಬ+್+ಮ  ಮ+ೆ"
                android:id="@+id/textView14"
                android:layout_below="@+id/textView13"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="25dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="To get ್  double tap ಅ, To get ೆ  double tap ಎ"
                android:id="@+id/textView15"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView14"
                android:layout_alignParentLeft="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textStyle="bold"
                    android:text="ಬಳಕೆದಾರರಲ್ಲಿ ಮನವಿ: ಜಾಹೀರಾತುಗಳ ಮೂಲಕ ಬರುವ ಎಲ್ಲ ಆದಾಯವನ್ನೂ ಕೇವಲ ಕನ್ನಡ ಭಾಷೆ ಸಂಬಂಧಿಸಿದ ಅಪ್ಲಿಕೇಶನ್ ಅಭಿವೃದ್ಧಿಗೆ ಬಳಸಲಾಗುತ್ತದೆ."
                    android:id="@+id/textView11"
                    android:textAlignment="center"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textView9"
                    android:layout_alignParentLeft="true"
                    android:paddingTop="20dp"
                    android:visibility="gone"/>





        </LinearLayout></ScrollView>


    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">
    </com.google.android.gms.ads.AdView>


</RelativeLayout>
